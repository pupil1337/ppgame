{
	"version": "2.0.0",
	"tasks": [
		// editor
		{
			"label": "editor [debug]",
			"options": {
				"cwd": "${workspaceFolder}/godot"
			},
			"type": "shell",
			"command": "scons",
			"args": [
				"platform=windows",
				"bits=64",
				"target=editor",
				"custom_modules=../ppgame/game_module",
				"dev_build=yes",
				"debug_symbols=yes",
				"compiledb=yes"
			],
			"group": "build",
			"problemMatcher": "$msCompile"
		},
		// game
		{
			"label": "game [debug]",
			"options": {
				"cwd": "${workspaceFolder}/ppgame/game_gdextension"
			},
			"type": "shell",
			"command": "scons",
			"args": [
				"platform=windows",
				"bits=64",
				"target=editor",
				"dev_build=yes",
				"debug_symbols=yes",
				"compiledb=yes"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$msCompile"
		},
		// merge compile_commands.json
		{
			"label": "merge compile_commands.json",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"type": "shell",
			"command": "start merge_compile_commands.bat",
			"problemMatcher": []
		},
		// editor & game
		{
			"label": "editor&game [debug]",
			"dependsOn": [
				"editor [debug]",
				"game [debug]"
			],
			"problemMatcher": []
		}
	]
}
